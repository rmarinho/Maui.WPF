<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.WPF.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="8">

            <Label Text="Controls Gallery"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center" />

            <Label Text="WPF Backend"
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,10" />

            <BoxView HeightRequest="2" Color="Gray" Margin="0,0,0,10" />

            <Button Text="Label" Clicked="OnLabelClicked" Margin="0,2" />
            <Button Text="Button" Clicked="OnButtonClicked" Margin="0,2" />
            <Button Text="Entry" Clicked="OnEntryClicked" Margin="0,2" />
            <Button Text="Editor" Clicked="OnEditorClicked" Margin="0,2" />
            <Button Text="CheckBox" Clicked="OnCheckBoxClicked" Margin="0,2" />
            <Button Text="Switch" Clicked="OnSwitchClicked" Margin="0,2" />
            <Button Text="Slider" Clicked="OnSliderClicked" Margin="0,2" />
            <Button Text="ProgressBar" Clicked="OnProgressBarClicked" Margin="0,2" />
            <Button Text="ActivityIndicator" Clicked="OnActivityIndicatorClicked" Margin="0,2" />
            <Button Text="DatePicker" Clicked="OnDatePickerClicked" Margin="0,2" />
            <Button Text="TimePicker" Clicked="OnTimePickerClicked" Margin="0,2" />
            <Button Text="Picker" Clicked="OnPickerClicked" Margin="0,2" />
            <Button Text="Stepper" Clicked="OnStepperClicked" Margin="0,2" />
            <Button Text="SearchBar" Clicked="OnSearchBarClicked" Margin="0,2" />
            <Button Text="Border" Clicked="OnBorderClicked" Margin="0,2" />
            <Button Text="BoxView" Clicked="OnBoxViewClicked" Margin="0,2" />
            <Button Text="ScrollView" Clicked="OnScrollViewClicked" Margin="0,2" />
            <Button Text="Shapes (Ellipse / Rectangle / Line)" Clicked="OnShapesClicked" Margin="0,2" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
