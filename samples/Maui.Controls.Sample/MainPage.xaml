<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.WPF.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="6">

            <!-- HEADER -->
            <Label Text="MAUI WPF Control Gallery"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#1a73e8"
                   HorizontalTextAlignment="Center" />
            <Label Text="All controls · All properties"
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,8" />
            <BoxView HeightRequest="2" Color="#1a73e8" Margin="0,0,0,8" />

            <!-- LABELS -->
            <Label Text="── Labels ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <Label Text="Default Label" />
            <Label Text="Red Bold 20pt" FontSize="20" FontAttributes="Bold" TextColor="Red" />
            <Label Text="Blue Italic 16pt" FontSize="16" FontAttributes="Italic" TextColor="Blue" />
            <Label Text="Center Aligned" HorizontalTextAlignment="Center" TextColor="Purple" FontSize="14" />
            <Label Text="End Aligned" HorizontalTextAlignment="End" TextColor="DarkGreen" FontSize="14" />
            <Label Text="Underlined Text" TextDecorations="Underline" TextColor="DarkOrange" />
            <Label Text="Strikethrough Text" TextDecorations="Strikethrough" TextColor="Gray" />
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Formatted " FontSize="16" />
                        <Span Text="String " FontAttributes="Bold" TextColor="Red" />
                        <Span Text="with " FontSize="12" />
                        <Span Text="Spans" TextDecorations="Underline" TextColor="Blue" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,4" />

            <!-- BUTTONS -->
            <Label Text="── Buttons ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <Button Text="Default Button" Clicked="OnButtonClicked" />
            <Button Text="Colored Button" BackgroundColor="#1a73e8" TextColor="White" FontSize="16" FontAttributes="Bold" />
            <Button Text="Red Button" BackgroundColor="#e53935" TextColor="White" CornerRadius="8" />
            <Button Text="Green Outlined" BackgroundColor="Transparent" TextColor="Green" BorderColor="Green" BorderWidth="2" />

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,4" />

            <!-- ENTRY -->
            <Label Text="── Entry ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <Entry Placeholder="Default entry..." />
            <Entry Text="With text and color" TextColor="Blue" FontSize="16" />
            <Entry Placeholder="Read only" IsReadOnly="True" Text="Can't edit this" />
            <Entry Placeholder="Max 10 chars" MaxLength="10" />

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,4" />

            <!-- EDITOR -->
            <Label Text="── Editor ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <Editor Text="Multi-line editor with custom colors" TextColor="DarkGreen" FontSize="14" HeightRequest="80" />

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,4" />

            <!-- CHECKBOX -->
            <Label Text="── CheckBox ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <HorizontalStackLayout Spacing="20">
                <CheckBox IsChecked="True" Color="Green" />
                <Label Text="Checked (Green)" VerticalTextAlignment="Center" />
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="20">
                <CheckBox IsChecked="False" Color="Red" />
                <Label Text="Unchecked (Red)" VerticalTextAlignment="Center" />
            </HorizontalStackLayout>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,4" />

            <!-- SWITCH -->
            <Label Text="── Switch ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <HorizontalStackLayout Spacing="20">
                <Switch IsToggled="True" OnColor="Green" />
                <Label Text="On (Green)" VerticalTextAlignment="Center" />
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="20">
                <Switch IsToggled="False" />
                <Label Text="Off" VerticalTextAlignment="Center" />
            </HorizontalStackLayout>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,4" />

            <!-- SLIDER -->
            <Label Text="── Slider ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <Slider Minimum="0" Maximum="100" Value="50"
                    MinimumTrackColor="Blue" MaximumTrackColor="LightGray"
                    ThumbColor="DarkBlue" />
            <Slider Minimum="0" Maximum="100" Value="75"
                    MinimumTrackColor="Green" MaximumTrackColor="LightGray" />

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,4" />

            <!-- PROGRESSBAR -->
            <Label Text="── ProgressBar ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <ProgressBar Progress="0.7" ProgressColor="Blue" />
            <ProgressBar Progress="0.4" ProgressColor="Red" />

            <!-- ACTIVITY INDICATOR -->
            <Label Text="── ActivityIndicator ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <ActivityIndicator IsRunning="True" Color="Blue" />

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,4" />

            <!-- DATEPICKER -->
            <Label Text="── DatePicker ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <DatePicker TextColor="DarkBlue" FontSize="14" />

            <!-- TIMEPICKER -->
            <Label Text="── TimePicker ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <TimePicker TextColor="DarkRed" FontSize="14" />

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,4" />

            <!-- PICKER -->
            <Label Text="── Picker ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <Picker Title="Select a fruit" TextColor="DarkGreen" FontSize="14">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Apple</x:String>
                        <x:String>Banana</x:String>
                        <x:String>Cherry</x:String>
                        <x:String>Date</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,4" />

            <!-- STEPPER -->
            <Label Text="── Stepper ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <HorizontalStackLayout Spacing="10">
                <Stepper Minimum="0" Maximum="10" Value="5" Increment="1" />
                <Label Text="Value: 5" VerticalTextAlignment="Center" x:Name="StepperLabel" />
            </HorizontalStackLayout>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,4" />

            <!-- SEARCHBAR -->
            <Label Text="── SearchBar ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <SearchBar Placeholder="Search here..." TextColor="DarkBlue" />

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,4" />

            <!-- BORDER -->
            <Label Text="── Border ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <Border Stroke="Blue" StrokeThickness="2" Padding="12"
                    StrokeShape="RoundRectangle 10">
                <Label Text="Content inside a blue border with rounded corners" TextColor="Blue" />
            </Border>
            <Border Stroke="Red" StrokeThickness="3" Padding="12" BackgroundColor="#FFF0F0">
                <Label Text="Red border with background" TextColor="Red" />
            </Border>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,4" />

            <!-- BOXVIEW -->
            <Label Text="── BoxView ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <BoxView Color="Blue" HeightRequest="40" CornerRadius="8" />
            <BoxView Color="Green" HeightRequest="30" CornerRadius="15" />
            <BoxView Color="Red" HeightRequest="20" />

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,4" />

            <!-- SHAPES -->
            <Label Text="── Shapes ──" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
            <HorizontalStackLayout Spacing="20">
                <Ellipse Fill="Blue" WidthRequest="60" HeightRequest="40"
                         Stroke="DarkBlue" StrokeThickness="2" />
                <Rectangle Fill="Green" WidthRequest="60" HeightRequest="40"
                           Stroke="DarkGreen" StrokeThickness="2" />
                <Line X1="0" Y1="0" X2="60" Y2="40"
                      Stroke="Red" StrokeThickness="3" />
            </HorizontalStackLayout>

            <!-- Footer -->
            <BoxView HeightRequest="1" Color="LightGray" Margin="0,8" />
            <Label Text="── Navigate to Demo Pages ──" FontSize="18" FontAttributes="Bold" TextColor="#1a73e8"
                   HorizontalTextAlignment="Center" />
            <Button Text="Label Demo →" Clicked="OnLabelDemoClicked" Margin="0,2" />
            <Button Text="Button Demo →" Clicked="OnButtonDemoClicked" Margin="0,2" />
            <Button Text="Entry Demo →" Clicked="OnEntryDemoClicked" Margin="0,2" />
            <Button Text="Editor Demo →" Clicked="OnEditorDemoClicked" Margin="0,2" />
            <Button Text="CheckBox Demo →" Clicked="OnCheckBoxDemoClicked" Margin="0,2" />
            <Button Text="Switch Demo →" Clicked="OnSwitchDemoClicked" Margin="0,2" />
            <Button Text="Slider Demo →" Clicked="OnSliderDemoClicked" Margin="0,2" />
            <Button Text="ProgressBar Demo →" Clicked="OnProgressBarDemoClicked" Margin="0,2" />
            <Button Text="ActivityIndicator Demo →" Clicked="OnActivityIndicatorDemoClicked" Margin="0,2" />
            <Button Text="DatePicker Demo →" Clicked="OnDatePickerDemoClicked" Margin="0,2" />
            <Button Text="TimePicker Demo →" Clicked="OnTimePickerDemoClicked" Margin="0,2" />
            <Button Text="Picker Demo →" Clicked="OnPickerDemoClicked" Margin="0,2" />
            <Button Text="Stepper Demo →" Clicked="OnStepperDemoClicked" Margin="0,2" />
            <Button Text="SearchBar Demo →" Clicked="OnSearchBarDemoClicked" Margin="0,2" />
            <Button Text="Border Demo →" Clicked="OnBorderDemoClicked" Margin="0,2" />
            <Button Text="BoxView Demo →" Clicked="OnBoxViewDemoClicked" Margin="0,2" />
            <Button Text="ScrollView Demo →" Clicked="OnScrollViewDemoClicked" Margin="0,2" />
            <Button Text="Shapes Demo →" Clicked="OnShapesDemoClicked" Margin="0,2" />
            <Label Text="End of Gallery" FontSize="12" TextColor="Gray"
                   HorizontalTextAlignment="Center" Margin="0,10,0,20" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
