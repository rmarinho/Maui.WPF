<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.WPF.Views.PickerDemoPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Button Text="â† Back" Clicked="OnBackClicked" HorizontalOptions="Start" />
            <Label Text="Picker Demo" FontSize="24" FontAttributes="Bold" />
            <BoxView HeightRequest="1" Color="Gray" Margin="0,0,0,10" />

            <Label Text="Select a fruit:" FontSize="18" />
            <Picker x:Name="FruitPicker" SelectedIndexChanged="OnFruitSelected">
                <Picker.Items>
                    <x:String>Apple</x:String>
                    <x:String>Banana</x:String>
                    <x:String>Cherry</x:String>
                    <x:String>Date</x:String>
                    <x:String>Elderberry</x:String>
                    <x:String>Fig</x:String>
                    <x:String>Grape</x:String>
                </Picker.Items>
            </Picker>
            <Label x:Name="FruitSelectionLabel" Text="No fruit selected" FontSize="16" />

            <Label Text="Picker with Title:" FontSize="18" Margin="0,10,0,0" />
            <Picker Title="Choose a fruit" x:Name="TitledPicker">
                <Picker.Items>
                    <x:String>Apple</x:String>
                    <x:String>Banana</x:String>
                    <x:String>Cherry</x:String>
                    <x:String>Date</x:String>
                    <x:String>Elderberry</x:String>
                    <x:String>Fig</x:String>
                    <x:String>Grape</x:String>
                </Picker.Items>
            </Picker>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
