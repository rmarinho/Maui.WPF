<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.WPF.Views.CheckBoxDemoPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Button Text="â† Back" Clicked="OnBackClicked" HorizontalOptions="Start" />
            <Label Text="CheckBox Demo" FontSize="24" FontAttributes="Bold" />
            <BoxView HeightRequest="1" Color="Gray" Margin="0,0,0,10" />

            <HorizontalStackLayout Spacing="10">
                <CheckBox x:Name="MainCheckBox" CheckedChanged="OnCheckedChanged" />
                <Label Text="Check me!" VerticalOptions="Center" />
            </HorizontalStackLayout>
            <Label x:Name="CheckStatusLabel" Text="IsChecked: False" FontSize="14" TextColor="Gray" />

            <HorizontalStackLayout Spacing="10">
                <CheckBox IsChecked="True" Color="Red" />
                <Label Text="Red (checked)" VerticalOptions="Center" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <CheckBox Color="Green" />
                <Label Text="Green (unchecked)" VerticalOptions="Center" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <CheckBox Color="Blue" />
                <Label Text="Blue" VerticalOptions="Center" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
