<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.WPF.Views.SwitchDemoPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Button Text="â† Back" Clicked="OnBackClicked" HorizontalOptions="Start" />
            <Label Text="Switch Demo" FontSize="24" FontAttributes="Bold" />
            <BoxView HeightRequest="1" Color="Gray" Margin="0,0,0,10" />

            <HorizontalStackLayout Spacing="10">
                <Switch x:Name="MainSwitch" Toggled="OnSwitchToggled" />
                <Label Text="Toggle me!" VerticalOptions="Center" />
            </HorizontalStackLayout>
            <Label x:Name="SwitchStatusLabel" Text="IsToggled: False" FontSize="14" TextColor="Gray" />

            <HorizontalStackLayout Spacing="10">
                <Switch OnColor="Red" />
                <Label Text="Red OnColor" VerticalOptions="Center" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Switch OnColor="Green" IsToggled="True" />
                <Label Text="Green OnColor (on)" VerticalOptions="Center" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Switch OnColor="Blue" />
                <Label Text="Blue OnColor" VerticalOptions="Center" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
