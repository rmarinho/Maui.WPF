<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.WPF.Views.ScrollViewDemoPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Button Text="â† Back" Clicked="OnBackClicked" HorizontalOptions="Start" />
            <Label Text="ScrollView Demo" FontSize="24" FontAttributes="Bold" />
            <BoxView HeightRequest="1" Color="Gray" Margin="0,0,0,10" />

            <Label Text="Vertical ScrollView with many items:" FontSize="18" />
            <Frame HeightRequest="200" Padding="0" HasShadow="False" BorderColor="Gray">
                <ScrollView Orientation="Vertical" VerticalScrollBarVisibility="Always">
                    <VerticalStackLayout Padding="10" Spacing="5">
                        <Label Text="Item 1" FontSize="14" />
                        <Label Text="Item 2" FontSize="14" />
                        <Label Text="Item 3" FontSize="14" />
                        <Label Text="Item 4" FontSize="14" />
                        <Label Text="Item 5" FontSize="14" />
                        <Label Text="Item 6" FontSize="14" />
                        <Label Text="Item 7" FontSize="14" />
                        <Label Text="Item 8" FontSize="14" />
                        <Label Text="Item 9" FontSize="14" />
                        <Label Text="Item 10" FontSize="14" />
                        <Label Text="Item 11" FontSize="14" />
                        <Label Text="Item 12" FontSize="14" />
                        <Label Text="Item 13" FontSize="14" />
                        <Label Text="Item 14" FontSize="14" />
                        <Label Text="Item 15" FontSize="14" />
                        <Label Text="Item 16" FontSize="14" />
                        <Label Text="Item 17" FontSize="14" />
                        <Label Text="Item 18" FontSize="14" />
                        <Label Text="Item 19" FontSize="14" />
                        <Label Text="Item 20" FontSize="14" />
                    </VerticalStackLayout>
                </ScrollView>
            </Frame>

            <Label Text="Horizontal ScrollView:" FontSize="18" Margin="0,10,0,0" />
            <Frame HeightRequest="80" Padding="0" HasShadow="False" BorderColor="Gray">
                <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Always">
                    <HorizontalStackLayout Padding="10" Spacing="10">
                        <BoxView Color="Red" WidthRequest="80" HeightRequest="60" CornerRadius="5" />
                        <BoxView Color="Orange" WidthRequest="80" HeightRequest="60" CornerRadius="5" />
                        <BoxView Color="Yellow" WidthRequest="80" HeightRequest="60" CornerRadius="5" />
                        <BoxView Color="Green" WidthRequest="80" HeightRequest="60" CornerRadius="5" />
                        <BoxView Color="Blue" WidthRequest="80" HeightRequest="60" CornerRadius="5" />
                        <BoxView Color="Indigo" WidthRequest="80" HeightRequest="60" CornerRadius="5" />
                        <BoxView Color="Purple" WidthRequest="80" HeightRequest="60" CornerRadius="5" />
                        <BoxView Color="Pink" WidthRequest="80" HeightRequest="60" CornerRadius="5" />
                    </HorizontalStackLayout>
                </ScrollView>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
