<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.WPF.Views.LabelDemoPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Button Text="â† Back" Clicked="OnBackClicked" HorizontalOptions="Start" />
            <Label Text="Label Demo" FontSize="24" FontAttributes="Bold" />
            <BoxView HeightRequest="1" Color="Gray" Margin="0,0,0,10" />

            <Label Text="Default Label" />
            <Label Text="FontSize 12" FontSize="12" />
            <Label Text="FontSize 20" FontSize="20" />
            <Label Text="FontSize 30" FontSize="30" />
            <Label Text="Bold" FontAttributes="Bold" />
            <Label Text="Italic" FontAttributes="Italic" />
            <Label Text="Bold Italic" FontAttributes="Bold,Italic" />
            <Label Text="Red Text" TextColor="Red" />
            <Label Text="Blue Text" TextColor="Blue" />
            <Label Text="Green Text" TextColor="Green" />
            <Label Text="Center Aligned" HorizontalTextAlignment="Center" />
            <Label Text="End Aligned" HorizontalTextAlignment="End" />
            <Label Text="This is a very long text that demonstrates TailTruncation line break mode. It should be truncated at the end if it overflows."
                   LineBreakMode="TailTruncation" MaxLines="1" />
            <Label Text="WordWrap: This is a long text that wraps at word boundaries when it reaches the edge of its container."
                   LineBreakMode="WordWrap" />
            <Label Text="Underlined Text" TextDecorations="Underline" />
            <Label Text="Strikethrough Text" TextDecorations="Strikethrough" />
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Formatted " FontSize="16" />
                        <Span Text="String " FontAttributes="Bold" TextColor="Red" />
                        <Span Text="with " FontSize="12" />
                        <Span Text="Spans" TextDecorations="Underline" TextColor="Blue" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
