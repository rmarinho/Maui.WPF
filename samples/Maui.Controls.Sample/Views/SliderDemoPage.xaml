<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.WPF.Views.SliderDemoPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Button Text="â† Back" Clicked="OnBackClicked" HorizontalOptions="Start" />
            <Label Text="Slider Demo" FontSize="24" FontAttributes="Bold" />
            <BoxView HeightRequest="1" Color="Gray" Margin="0,0,0,10" />

            <Label Text="Default Slider (0-100):" />
            <Slider x:Name="MainSlider" Minimum="0" Maximum="100" Value="50" ValueChanged="OnSliderValueChanged" />
            <Label x:Name="SliderValueLabel" Text="Value: 50" FontSize="14" TextColor="Gray" />

            <Label Text="Styled Slider:" />
            <Slider Minimum="0" Maximum="10" Value="3"
                    ThumbColor="Red" MinimumTrackColor="Orange" MaximumTrackColor="LightGray" />

            <Label Text="Another Styled Slider:" />
            <Slider Minimum="0" Maximum="1" Value="0.5"
                    ThumbColor="Purple" MinimumTrackColor="Purple" MaximumTrackColor="LightGray" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
