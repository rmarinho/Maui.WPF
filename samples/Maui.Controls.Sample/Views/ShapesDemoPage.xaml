<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.WPF.Views.ShapesDemoPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Button Text="â† Back" Clicked="OnBackClicked" HorizontalOptions="Start" />
            <Label Text="Shapes Demo" FontSize="24" FontAttributes="Bold" />
            <BoxView HeightRequest="1" Color="Gray" Margin="0,0,0,10" />

            <Label Text="Ellipse:" FontSize="18" />
            <Ellipse Fill="LightBlue" Stroke="Blue" StrokeThickness="2"
                     WidthRequest="120" HeightRequest="80" HorizontalOptions="Start" />

            <Label Text="Rectangle:" FontSize="18" Margin="0,10,0,0" />
            <Rectangle Fill="LightGreen" Stroke="DarkGreen" StrokeThickness="2"
                       RadiusX="10" RadiusY="10"
                       WidthRequest="150" HeightRequest="80" HorizontalOptions="Start" />

            <Label Text="Line:" FontSize="18" Margin="0,10,0,0" />
            <Line X1="0" Y1="0" X2="200" Y2="50"
                  Stroke="Red" StrokeThickness="3" HorizontalOptions="Start" />

            <Label Text="Another Ellipse (circle):" FontSize="18" Margin="0,10,0,0" />
            <Ellipse Fill="Orange" Stroke="DarkOrange" StrokeThickness="2"
                     WidthRequest="80" HeightRequest="80" HorizontalOptions="Start" />

            <Label Text="Diagonal Line:" FontSize="18" Margin="0,10,0,0" />
            <Line X1="0" Y1="50" X2="150" Y2="0"
                  Stroke="Purple" StrokeThickness="2" HorizontalOptions="Start" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
