<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.WPF.Views.SearchBarDemoPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Button Text="â† Back" Clicked="OnBackClicked" HorizontalOptions="Start" />
            <Label Text="SearchBar Demo" FontSize="24" FontAttributes="Bold" />
            <BoxView HeightRequest="1" Color="Gray" Margin="0,0,0,10" />

            <Label Text="Search and press Enter:" FontSize="18" />
            <SearchBar x:Name="DemoSearchBar"
                       Placeholder="Type to search..."
                       SearchButtonPressed="OnSearchButtonPressed"
                       TextChanged="OnSearchTextChanged" />
            <Label x:Name="SearchResultLabel" Text="No search yet" FontSize="16" />

            <Label Text="Filtered items:" FontSize="18" Margin="0,10,0,0" />
            <Label x:Name="Item1" Text="Apple" FontSize="14" />
            <Label x:Name="Item2" Text="Banana" FontSize="14" />
            <Label x:Name="Item3" Text="Cherry" FontSize="14" />
            <Label x:Name="Item4" Text="Date" FontSize="14" />
            <Label x:Name="Item5" Text="Elderberry" FontSize="14" />
            <Label x:Name="Item6" Text="Fig" FontSize="14" />
            <Label x:Name="Item7" Text="Grape" FontSize="14" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
