<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.WPF.Views.BoxViewDemoPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Button Text="â† Back" Clicked="OnBackClicked" HorizontalOptions="Start" />
            <Label Text="BoxView Demo" FontSize="24" FontAttributes="Bold" />
            <BoxView HeightRequest="1" Color="Gray" Margin="0,0,0,10" />

            <Label Text="Basic BoxViews:" FontSize="18" />
            <BoxView Color="Red" WidthRequest="100" HeightRequest="50" HorizontalOptions="Start" />
            <BoxView Color="Blue" WidthRequest="150" HeightRequest="50" CornerRadius="10" HorizontalOptions="Start" />
            <BoxView Color="Green" WidthRequest="80" HeightRequest="80" CornerRadius="40" HorizontalOptions="Start" />

            <Label Text="Colorful Grid:" FontSize="18" Margin="0,10,0,0" />
            <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="60,60,60" ColumnSpacing="5" RowSpacing="5">
                <BoxView Color="Red" Grid.Row="0" Grid.Column="0" CornerRadius="5" />
                <BoxView Color="Orange" Grid.Row="0" Grid.Column="1" CornerRadius="5" />
                <BoxView Color="Yellow" Grid.Row="0" Grid.Column="2" CornerRadius="5" />
                <BoxView Color="Green" Grid.Row="0" Grid.Column="3" CornerRadius="5" />
                <BoxView Color="Teal" Grid.Row="1" Grid.Column="0" CornerRadius="5" />
                <BoxView Color="Blue" Grid.Row="1" Grid.Column="1" CornerRadius="5" />
                <BoxView Color="Indigo" Grid.Row="1" Grid.Column="2" CornerRadius="5" />
                <BoxView Color="Purple" Grid.Row="1" Grid.Column="3" CornerRadius="5" />
                <BoxView Color="Pink" Grid.Row="2" Grid.Column="0" CornerRadius="5" />
                <BoxView Color="Brown" Grid.Row="2" Grid.Column="1" CornerRadius="5" />
                <BoxView Color="Gray" Grid.Row="2" Grid.Column="2" CornerRadius="5" />
                <BoxView Color="Black" Grid.Row="2" Grid.Column="3" CornerRadius="5" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
