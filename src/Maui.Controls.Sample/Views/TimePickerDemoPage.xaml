<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.WPF.Views.TimePickerDemoPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Button Text="â† Back" Clicked="OnBackClicked" HorizontalOptions="Start" />
            <Label Text="TimePicker Demo" FontSize="24" FontAttributes="Bold" />
            <BoxView HeightRequest="1" Color="Gray" Margin="0,0,0,10" />

            <Label Text="Default TimePicker:" FontSize="18" />
            <TimePicker x:Name="DefaultTimePicker" PropertyChanged="OnTimePickerPropertyChanged" />
            <Label x:Name="SelectedTimeLabel" Text="No time selected yet" FontSize="16" />

            <Label Text="24-hour format (HH:mm):" FontSize="18" Margin="0,10,0,0" />
            <TimePicker x:Name="Format24TimePicker" Format="HH:mm" />

            <Label Text="12-hour format (hh:mm tt):" FontSize="18" Margin="0,10,0,0" />
            <TimePicker x:Name="Format12TimePicker" Format="hh:mm tt" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
