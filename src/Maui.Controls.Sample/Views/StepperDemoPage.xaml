<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.WPF.Views.StepperDemoPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Button Text="← Back" Clicked="OnBackClicked" HorizontalOptions="Start" />
            <Label Text="Stepper Demo" FontSize="24" FontAttributes="Bold" />
            <BoxView HeightRequest="1" Color="Gray" Margin="0,0,0,10" />

            <Label Text="Stepper (0–10, Increment=1):" FontSize="18" />
            <Stepper x:Name="IntStepper" Minimum="0" Maximum="10" Increment="1" ValueChanged="OnIntStepperChanged" />
            <Label x:Name="IntStepperLabel" Text="Value: 0" FontSize="16" />

            <Label Text="Stepper (0–10, Increment=0.5):" FontSize="18" Margin="0,10,0,0" />
            <Stepper x:Name="HalfStepper" Minimum="0" Maximum="10" Increment="0.5" ValueChanged="OnHalfStepperChanged" />
            <Label x:Name="HalfStepperLabel" Text="Value: 0" FontSize="16" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
