<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.WPF.Views.ProgressBarDemoPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Button Text="â† Back" Clicked="OnBackClicked" HorizontalOptions="Start" />
            <Label Text="ProgressBar Demo" FontSize="24" FontAttributes="Bold" />
            <BoxView HeightRequest="1" Color="Gray" Margin="0,0,0,10" />

            <Label Text="Progress 0%:" />
            <ProgressBar Progress="0.0" />

            <Label Text="Progress 25%:" />
            <ProgressBar Progress="0.25" />

            <Label Text="Progress 50%:" />
            <ProgressBar Progress="0.5" />

            <Label Text="Progress 75%:" />
            <ProgressBar Progress="0.75" />

            <Label Text="Progress 100%:" />
            <ProgressBar Progress="1.0" />

            <BoxView HeightRequest="1" Color="Gray" Margin="0,10" />
            <Label Text="Dynamic ProgressBar (controlled by Slider):" FontAttributes="Bold" />
            <ProgressBar x:Name="DynamicProgressBar" Progress="0.5" />
            <Slider Minimum="0" Maximum="1" Value="0.5" ValueChanged="OnSliderValueChanged" />
            <Label x:Name="ProgressLabel" Text="Progress: 0.5" FontSize="14" TextColor="Gray" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
