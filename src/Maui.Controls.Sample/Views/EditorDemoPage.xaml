<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.WPF.Views.EditorDemoPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Button Text="â† Back" Clicked="OnBackClicked" HorizontalOptions="Start" />
            <Label Text="Editor Demo" FontSize="24" FontAttributes="Bold" />
            <BoxView HeightRequest="1" Color="Gray" Margin="0,0,0,10" />

            <Label Text="Default Editor:" />
            <Editor Placeholder="Type multi-line text here..." HeightRequest="120" TextChanged="OnTextChanged" />
            <Label x:Name="CurrentTextLabel" Text="Current text: " FontSize="14" TextColor="Gray" />

            <Label Text="Tall Editor (200px):" />
            <Editor Placeholder="Tall editor..." HeightRequest="200" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
