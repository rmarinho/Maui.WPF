<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.WPF.Views.EntryDemoPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Button Text="â† Back" Clicked="OnBackClicked" HorizontalOptions="Start" />
            <Label Text="Entry Demo" FontSize="24" FontAttributes="Bold" />
            <BoxView HeightRequest="1" Color="Gray" Margin="0,0,0,10" />

            <Label Text="Default Entry:" />
            <Entry Placeholder="Type here..." TextChanged="OnTextChanged" />
            <Label x:Name="CurrentTextLabel" Text="Current text: " FontSize="14" TextColor="Gray" />

            <Label Text="MaxLength 10:" />
            <Entry Placeholder="Max 10 chars" MaxLength="10" />

            <Label Text="Password:" />
            <Entry Placeholder="Enter password" IsPassword="True" />

            <Label Text="Numeric Keyboard:" />
            <Entry Placeholder="Numbers only" Keyboard="Numeric" />

            <Label Text="Email Keyboard:" />
            <Entry Placeholder="Email address" Keyboard="Email" />

            <Label Text="Telephone Keyboard:" />
            <Entry Placeholder="Phone number" Keyboard="Telephone" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
